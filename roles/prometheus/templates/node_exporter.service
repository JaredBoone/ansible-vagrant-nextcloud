[Unit]
Description=Node Exporter

[Service]
User=prometheus
ExecStart=/opt/prometheus/node_exporter/node_exporter \
  -collectors.enabled conntrack,diskstats,entropy,edac,filefd,filesystem,hwmon,loadavg,mdadm,meminfo,netdev,netstat,sockstat,stat,textfile,time,uname,vmstat,mountstats,nfs
Restart=always

[Install]
WantedBy=default.target
